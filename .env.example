# Flask Configuration
SECRET_KEY=your_secret_key_here_change_in_production
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///data/verification_platform.db
SQLALCHEMY_ECHO=False

# OpenAI API Configuration (required)
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your_api_key_here

# ElevenLabs Agent IDs (create these in your ElevenLabs dashboard)
ELEVENLABS_HR_AGENT_ID=your_hr_agent_id_here
ELEVENLABS_REFERENCE_AGENT_ID=your_reference_agent_id_here

# GitHub API Configuration (optional, for technical profile analysis)
GITHUB_API_TOKEN=your_github_token_here

# File Storage
UPLOAD_FOLDER=data/uploads
TRANSCRIPT_OUTPUT_DIR=data/transcripts
DOCUMENT_STORAGE_DIR=data/documents

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=Verification Platform

# Twilio API Configuration (for phone calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Verification Settings
VERIFICATION_TIMEOUT_HOURS=24

# CORS Settings (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
